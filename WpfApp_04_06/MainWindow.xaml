<Window x:Class="WpfApp_04_06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_04_06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="IntervalTextBox" Width="100" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Text="1000"/>
            <Button Name="UpdateButton" Content="Update Interval" Width="100" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Click="UpdateButton_Click"/>
            <ListView Name="ProcessListView" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding ProcessName}" Width="200"/>
                        <GridViewColumn Header="PID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
