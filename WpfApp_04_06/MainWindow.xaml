<Window x:Class="WpfApp_04_06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_04_06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button Content="Launch Notepad" Click="LaunchNotepad_Click" Margin="10"/>
            <Button Content="Launch Calculator" Click="LaunchCalculator_Click" Margin="10"/>
            <Button Content="Launch Paint" Click="LaunchPaint_Click" Margin="10"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox Name="CustomAppTextBox" Width="250" Margin="0,0,10,0" />
                <Button Content="Launch Custom App" Click="LaunchCustomApp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
